  body#page-top.fixed-nav.sticky-footer.bg-dark
    include includes/navbarad.pug
    .content-wrapper
      table(style="width:100%;  text-align:center;")
        tr
          td
            center
              .table-responsive-md-scroll-y
                table.table(style="display: block; height: 350px; width: 1100px; overflow-y: scroll; text-align:left;")
                  thead
                    tr
                      th(scope="col") Alumno
                      th(scope="col") Grupo
                      th(scope="col") Fecha
                      th(scope="col") CÃ³digo
                      th(scope="col") Mensajes
                      th(scope="col") Mundo
                      
                  tbody
                    each task,i in msg.tabla
                      tr
                        td
                          textarea(rows="6" cols="15" style="resize: none; border: none; font-size: 12px;")
                            | #{task.nombre}
                        td
                          textarea(rows="6" cols="5" style="resize: none; border: none; font-size: 12px;")
                            | #{task.grupo}
                        td
                          textarea(rows="6" cols="10" style="resize: none; border: none; font-size: 12px;")
                            | #{task.fecha}
                        td
                          textarea(rows="6" cols="40" style="resize: none; border: none; font-size: 12px; overflow-x: scroll")
                            | #{task.codigo}
                        td  
                          textarea(rows="6" cols="40" style="resize: none; border: none; font-size: 12px;")
                            | #{task.mensages}
                        td 
                          button.btn(onclick="verMundoAlumno("+i+")")
                              |  Mundo
        tr
          td
