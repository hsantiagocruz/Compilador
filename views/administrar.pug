doctype html
html(lang='en')

  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')

    title Administar alumnos

    include includes/css/core.pug

    // Page level plugin CSS
    link(href='vendor/datatables/dataTables.bootstrap4.css', rel='stylesheet')
    link(rel="stylesheet" href="vendor/font-awesome/css/font-awesome.min.css")

    script(src="js/jquery-3.3.1.min.js")
    //script(src="js/Compilador/mundo.js" )
    //script(src="js/Compilador/app.js" )

    include includes/css/custom.pug

  body#page-top.fixed-nav.sticky-footer.bg-dark
    include includes/navbarad.pug
    .content-wrapper
      table(style="width:100%;  text-align:center;")
        tr
          td
            center
                .table-responsive-md-scroll-y
                table.table(style="height: 500px; width: 650px; overflow-y: scroll; text-align:left;")
                    thead
                        tr
                            th(scope="col") Nombre
                            th(scope="col") Grupo
                            th(scope="col") Email
                            th(scope="col") Eliminar
                    tbody
                      each task in msg.tabla
                        tr
                          td #{task.nombre}
                          td #{task.grupo}
                          td #{task.email}
                          td
                            form(method="GET", action='/eliminarAlumno/'+task.idusuario)
                              .form-group
                                input.btn.btn-outline-dark(type='submit' value="Eliminar")
                      
        //tr
          td
            div
                form(method="GET", action="/eliminarTodos")
                .form-group
                    input.btn.btn-outline-dark(type='submit' value="Eliminar todos")
      // /.container-fluid
      // /.content-wrapper

      //include includes/footer.pug

      include includes/scroll-to-top.pug

      include includes/modals/logout.pug

      include includes/js/core.pug

      include includes/js/custom.pug